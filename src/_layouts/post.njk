---
layout: base.njk
---

<article class="blog-post">
    <header class="post-header">
        <div class="container">
            {% if image %}
            <img src="{{ image }}" alt="{{ title }}" class="post-image">
            {% endif %}
            <h1>{{ title }}</h1>
            <div class="post-meta">
                <span class="post-author">By {{ author }}</span>
                <span class="post-date">{{ date | dateDisplay }}</span>
                {% if category %}
                <span class="post-category">{{ category }}</span>
                {% endif %}
            </div>
            {% if tags %}
            <div class="post-tags">
                {% for tag in tags %}
                <span class="tag">{{ tag }}</span>
                {% endfor %}
            </div>
            {% endif %}
            <div class="audio-controls">
                <button id="playButton" class="audio-btn" title="Listen to this article">
                    <span class="play-icon">▶️</span> Listen to Article
                </button>
                <button id="pauseButton" class="audio-btn" style="display:none;" title="Pause audio">
                    <span class="pause-icon">⏸️</span> Pause
                </button>
                <button id="stopButton" class="audio-btn" style="display:none;" title="Stop audio">
                    <span class="stop-icon">⏹️</span> Stop
                </button>
            </div>
        </div>
    </header>

    <div class="post-content container" id="postContent">
        {{ content | safe }}
    </div>

    <footer class="post-footer container">
        <a href="/blog/" class="back-to-blog">← Back to Blog</a>
    </footer>
</article>

