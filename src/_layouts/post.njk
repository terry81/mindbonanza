---
layout: base.njk
---

<article class="blog-post">
    <header class="post-header">
        <div class="container">
            {% if image %}
            <picture class="post-image-wrapper">
                <source
                    srcset="{{ image }}?auto=format&fit=crop&w=1200&h=630&q=80&fm=webp"
                    type="image/webp"
                    media="(min-width: 1024px)">
                <source
                    srcset="{{ image }}?auto=format&fit=crop&w=800&h=500&q=80&fm=webp"
                    type="image/webp"
                    media="(min-width: 768px)">
                <source
                    srcset="{{ image }}?auto=format&fit=crop&w=600&h=400&q=75&fm=webp"
                    type="image/webp">
                <img
                    src="{{ image }}?auto=format&fit=crop&w=800&h=500&q=80"
                    alt="{{ title }} - {{ excerpt | striptags | truncate(100) }}"
                    width="800"
                    height="500"
                    loading="eager"
                    decoding="async"
                    class="post-image">
            </picture>
            {% endif %}
            <h1>{{ title }}</h1>
            <div class="post-meta">
                <span class="post-author">By {{ author }}</span>
                <span class="post-date">{{ date | dateDisplay }}</span>
                {% if category %}
                <span class="post-category">{{ category }}</span>
                {% endif %}
            </div>
            {% if tags %}
            <div class="post-tags">
                {% for tag in tags %}
                <span class="tag">{{ tag }}</span>
                {% endfor %}
            </div>
            {% endif %}
        </div>
    </header>

    <div class="post-with-sidebar">
        <div class="post-main-content">
            <div class="post-content">
                {{ content | safe }}
            </div>

            <footer class="post-footer">
                <a href="/blog/" class="back-to-blog">‚Üê Back to Blog</a>
            </footer>
        </div>

        <aside class="post-sidebar">
            <div class="sidebar-sticky">
                {% include "sidebar-banner.njk" %}
            </div>
        </aside>
    </div>
</article>

