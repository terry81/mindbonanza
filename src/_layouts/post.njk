---
layout: base.njk
---

<article class="blog-post" itemscope itemtype="https://schema.org/Article">
    <header class="post-header">
        <div class="container">
            {% if image %}
            <picture class="post-image-wrapper">
                <source
                    srcset="{{ image }}?auto=format&fit=crop&w=1200&h=630&q=80&fm=webp"
                    type="image/webp"
                    media="(min-width: 1024px)">
                <source
                    srcset="{{ image }}?auto=format&fit=crop&w=800&h=500&q=80&fm=webp"
                    type="image/webp"
                    media="(min-width: 768px)">
                <source
                    srcset="{{ image }}?auto=format&fit=crop&w=600&h=400&q=75&fm=webp"
                    type="image/webp">
                <img
                    src="{{ image }}?auto=format&fit=crop&w=800&h=500&q=80"
                    alt="{{ title }} - {{ excerpt | striptags | truncate(100) }}"
                    width="800"
                    height="500"
                    loading="eager"
                    decoding="async"
                    class="post-image"
                    itemprop="image">
            </picture>
            {% endif %}
            <h1 itemprop="headline">{{ title }}</h1>
            <div class="post-meta">
                <span class="post-author" itemprop="author">By {{ author }}</span>
                <span class="post-date"><time datetime="{{ date | dateISO }}" itemprop="datePublished">{{ date | dateDisplay }}</time></span>
                <span class="post-reading-time">üìñ {{ content | readingTime }}</span>
                {% if category %}
                <span class="post-category">{{ category }}</span>
                {% endif %}
            </div>
            {% if tags %}
            <div class="post-tags" role="list" aria-label="Article tags">
                {% for tag in tags %}
                <span class="tag" role="listitem">{{ tag }}</span>
                {% endfor %}
            </div>
            {% endif %}
        </div>
    </header>

    <div class="post-with-sidebar">
        <div class="post-main-content">
            <div class="post-content" itemprop="articleBody">
                {{ content | safe }}
            </div>

            <!-- Share buttons -->
            <div class="share-buttons">
                <span class="share-label">Share this article:</span>
                <div class="share-icons">
                    <a href="https://www.facebook.com/sharer/sharer.php?u=https://www.mindbonanza.com{{ page.url }}"
                       target="_blank"
                       rel="noopener noreferrer"
                       class="share-btn share-facebook"
                       aria-label="Share on Facebook">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                        </svg>
                    </a>
                    <a href="https://twitter.com/intent/tweet?url=https://www.mindbonanza.com{{ page.url }}&text={{ title | urlencode }}"
                       target="_blank"
                       rel="noopener noreferrer"
                       class="share-btn share-twitter"
                       aria-label="Share on Twitter">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                        </svg>
                    </a>
                    <a href="https://www.linkedin.com/shareArticle?mini=true&url=https://www.mindbonanza.com{{ page.url }}&title={{ title | urlencode }}"
                       target="_blank"
                       rel="noopener noreferrer"
                       class="share-btn share-linkedin"
                       aria-label="Share on LinkedIn">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                        </svg>
                    </a>
                    <button class="share-btn share-copy" onclick="copyToClipboard()" aria-label="Copy link to clipboard">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
                            <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
                        </svg>
                    </button>
                </div>
            </div>

            <footer class="post-footer">
                <a href="/blog/" class="back-to-blog">‚Üê Back to Blog</a>
            </footer>
        </div>

        <aside class="post-sidebar">
            <div class="sidebar-sticky">
                {% include "sidebar-banner.njk" %}
            </div>
        </aside>
    </div>
</article>

<script>
function copyToClipboard() {
    navigator.clipboard.writeText(window.location.href).then(() => {
        const btn = document.querySelector('.share-copy');
        const originalHTML = btn.innerHTML;
        btn.innerHTML = '‚úì';
        btn.classList.add('copied');
        setTimeout(() => {
            btn.innerHTML = originalHTML;
            btn.classList.remove('copied');
        }, 2000);
    });
}
</script>

