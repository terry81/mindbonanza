---
layout: base.njk
---

<article class="blog-post">
    <header class="post-header">
        <div class="container">
            {% if image %}
            <img src="{{ image }}" alt="{{ title }}" class="post-image">
            {% endif %}
            <h1>{{ title }}</h1>
            <div class="post-meta">
                <span class="post-author">By {{ author }}</span>
                <span class="post-date">{{ date | dateDisplay }}</span>
                {% if category %}
                <span class="post-category">{{ category }}</span>
                {% endif %}
            </div>
            {% if tags %}
            <div class="post-tags">
                {% for tag in tags %}
                <span class="tag">{{ tag }}</span>
                {% endfor %}
            </div>
            {% endif %}
        </div>
    </header>

    <div class="post-content container">
        {{ content | safe }}
    </div>

    <footer class="post-footer container">
        <a href="/blog/" class="back-to-blog">‚Üê Back to Blog</a>
    </footer>
</article>

