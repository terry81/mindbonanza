# Cloudflare Pages Headers Configuration
# This file sets cache headers and optimizations for all assets

# HTML pages - no caching at edge, browser can cache briefly
/*.html
  Cache-Control: public, max-age=0, s-maxage=0, must-revalidate
  CDN-Cache-Control: max-age=0
  Cloudflare-CDN-Cache-Control: max-age=0
  X-Content-Type-Options: nosniff
  X-Frame-Options: SAMEORIGIN
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin

# Main index page - no edge caching
/index.html
  Cache-Control: public, max-age=0, s-maxage=0, must-revalidate
  CDN-Cache-Control: max-age=0
  Cloudflare-CDN-Cache-Control: max-age=0
  X-Content-Type-Options: nosniff
  X-Frame-Options: SAMEORIGIN
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin

# Root path (handles both / and /index.html)
/
  Cache-Control: public, max-age=0, s-maxage=0, must-revalidate
  CDN-Cache-Control: max-age=0
  Cloudflare-CDN-Cache-Control: max-age=0
  X-Content-Type-Options: nosniff
  X-Frame-Options: SAMEORIGIN

# Blog index
/blog/
  Cache-Control: public, max-age=0, s-maxage=0, must-revalidate
  CDN-Cache-Control: max-age=0
  Cloudflare-CDN-Cache-Control: max-age=0

/blog/*
  Cache-Control: public, max-age=0, s-maxage=0, must-revalidate
  CDN-Cache-Control: max-age=0
  Cloudflare-CDN-Cache-Control: max-age=0

# Tools page
/tools/
  Cache-Control: public, max-age=0, s-maxage=0, must-revalidate
  CDN-Cache-Control: max-age=0
  Cloudflare-CDN-Cache-Control: max-age=0

# CSS files - long cache with immutable flag
/css/*.css
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# JavaScript files - long cache with immutable flag
/js/*.js
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# Images - long cache
/assets/*.jpg
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/assets/*.jpeg
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/assets/*.png
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/assets/*.gif
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/assets/*.webp
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/assets/*.svg
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# Fonts - very long cache
/assets/*.woff
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/assets/*.woff2
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/assets/*.ttf
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/assets/*.otf
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# HTML files in assets directory (tools) - short edge cache
/assets/*.html
  Cache-Control: public, max-age=300, s-maxage=300, stale-while-revalidate=60
  CDN-Cache-Control: max-age=300
  Cloudflare-CDN-Cache-Control: max-age=300
  X-Content-Type-Options: nosniff
  X-Frame-Options: SAMEORIGIN

# Assets subdirectories (tool pages) - short edge cache
/assets/*/
  Cache-Control: public, max-age=300, s-maxage=300, stale-while-revalidate=60
  CDN-Cache-Control: max-age=300
  Cloudflare-CDN-Cache-Control: max-age=300

# Blog posts - short edge cache (5 minutes)
/posts/*
  Cache-Control: public, max-age=300, s-maxage=300, stale-while-revalidate=60
  CDN-Cache-Control: max-age=300
  Cloudflare-CDN-Cache-Control: max-age=300
  X-Content-Type-Options: nosniff
  X-Frame-Options: SAMEORIGIN

# Sitemap and robots - cache for 1 day
/sitemap.xml
  Cache-Control: public, max-age=86400
  X-Content-Type-Options: nosniff

/robots.txt
  Cache-Control: public, max-age=86400
  X-Content-Type-Options: nosniff

# Default for everything else
/*
  X-Content-Type-Options: nosniff
  X-Frame-Options: SAMEORIGIN
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
