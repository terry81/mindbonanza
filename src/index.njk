<!-- Blog Preview Section -->
<section class="blog-preview">
    <div class="container">
        <h2 class="section-title">Latest From Our Blog</h2>
        <div class="blog-grid">
            {%- set postCount = 0 -%}
            {%- for post in collections.posts -%}
            {%- if postCount < 6 -%}
            {%- set postCount = postCount + 1 -%}
            <article class="blog-card">
                {% if post.data.image %}
                <picture class="blog-card-image-wrapper">
                    <source
                        srcset="{{ post.data.image }}?auto=format&fit=crop&w=600&h=400&q=80&fm=webp"
                        type="image/webp"
                        media="(min-width: 768px)">
                    <source
                        srcset="{{ post.data.image }}?auto=format&fit=crop&w=400&h=300&q=75&fm=webp"
                        type="image/webp">
                    <img
                        src="{{ post.data.image }}?auto=format&fit=crop&w=600&h=400&q=80"
                        alt="{{ post.data.title }} - {{ post.data.excerpt | striptags | truncate(80) }}"
                        width="600"
                        height="400"
                        loading="lazy"
                        decoding="async"
                        class="blog-card-image">
                </picture>
                {% endif %}
                <div class="blog-card-content">
                    <span class="blog-category">{{ post.data.category }}</span>
                    <h3>{{ post.data.title }}</h3>
                    <p class="blog-excerpt">{{ post.data.excerpt }}</p>
                    <div class="blog-meta">
                        <span>{{ post.data.date | dateDisplay }}</span>
                    </div>
                    <a href="{{ post.url }}" class="read-more">Read More â†’</a>
                </div>
            </article>
            {%- endif -%}
            {%- endfor -%}
        </div>
